{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationDir": "./types",
		"emitDecoratorMetadata": true,
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./bin/",
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"./index.ts",
		"./src/**/*"
	]
}
